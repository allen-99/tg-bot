{ 
  "compilerOptions": {
    "lib": ["es2020"],
    "moduleResolution": "node",
    "target": "es2022",
    "module": "commonjs",
    "rootDir": "src",
    "baseUrl": "./",
    "outDir": "./bin",
    "paths": {
      "@/*": ["src/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules"
  ]
}